<%= form_with(model: @article, local: true) do |form| %>
 
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> Error:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
    <div class="row px-5">
      <div class="col">
 <div>
    <%= form.label :title, "Titulo", class: "form-label" %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  <div>
    <%= form.label :text, "Resumen", class: 'form-label' %>
    <%= form.text_area :text, class: 'form-control' %>
  </div>
  <div>
    <%= form.label :photo, "Portada", class: 'form-label' %>
    <%= form.file_field :photo, class: 'form-control' %>
  </div>
  <div>
    <%= form.label :file, "Archivo", class: 'form-label'%>
    <%= form.file_field :file, class: 'form-control' %>
  </div>
      </div>
    </div>
</div>
<br>
<br>
 <center><%= form.submit "Enviar", class: 'btn btn-primary' %></center>
<% end %>